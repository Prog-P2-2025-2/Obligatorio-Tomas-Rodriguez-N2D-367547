@using Dominio

<p class="fs-4 fw-bold text-center mb-4">@ViewBag.Equipo.Nombre</p>

<form action="~/pago/BuscarPagos?idUsuario=@Context.Session.GetInt32("id")"
      method="get"
      class="p-3 border rounded shadow-sm bg-light">

    <div class="mb-3">
        <label class="form-label fw-bold">Fecha Inicial</label>
        <input type="date" name="fechaInicial" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Fecha Final</label>
        <input type="date" name="fechaFinal" class="form-control" />
    </div>

    <input type="hidden"
           name="idUsuario"
           value="@Context.Session.GetInt32("id")" />

    <button type="submit" class="btn btn-dark w-100">
        <i class="bi bi-search me-1"></i> Buscar
    </button>

</form>
@if (ViewBag.PagosDelEquipo != null)
{
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">


        <tr>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Monto</th>
            <th>Monto Con Descuento o Recargo</th>
            <th>Tipo de Pago</th>
            <th>MetodoDePago</th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (Pago item in ViewBag.PagosDelEquipo)
        {
              <tr>
                    <td>@item.Descripcion</td>
                    <td>@item.FechaEsteMes().ToString("dd/MM/yyyy")</td>
                    <td>@item.Monto</td>
                    <td>@item.DescuentoYRecargo()</td>

                    <td><span class="badge bg-primary">@item.TipoDePago()</span></td>
                        <td>@item.MetodoDePago</td>
               </tr>
            
        
        }
    </tbody>
</table>

}
else
{
<p>No hay pagos de este mes</p>
}