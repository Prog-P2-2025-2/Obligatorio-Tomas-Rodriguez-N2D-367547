@using Dominio
@model PagoUnico

<h1 class="text-center my-4">CARGAR PAGO ÚNICO</h1>



<div class="card-body">
@if (ViewBag.mensaje != null)
{
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.mensaje
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}
<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" class="row g-3">

             
                <div class="col-md-6">
                    <label for="tipoGasto" class="form-label">Tipo de gasto</label>
                        <select name="idTipoGasto" id="tipoGasto" class="form-select">
                        <option value="">Seleccionar Tipo de gasto</option>
                        @foreach (TipoGasto item in ViewBag.TiposGastos)
                        {
                            if (Model.TipoGasto != null && item.Id == Model.TipoGasto.Id)
                                   {
                                    <option selected value="@item.Id">@item.Nombre</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Nombre</option>
                                }


                            
                        }
                    </select>
                </div>

           
                <div class="col-md-6">
                    <label for="metodoPago" class="form-label">Método de pago</label>
                    <select name="MetodoDePago" id="metodoPago" class="form-select">
                            <!--<option value="-1" selected>Seleccionar Método de pago</option>-->
                        @foreach (int item in Enum.GetValues(typeof(MetodoDePago)))
                        {
                            <option value="@item">@Enum.GetName(typeof(MetodoDePago), item)</option>
                        }
                    </select>
                </div>

              
                <div class="col-12">
                    <label for="descripcion" class="form-label">Descripción</label>
                        <input type="text" name="Descripcion" id="descripcion" class="form-control" value="@Model.Descripcion" />
                </div>

        
                <div class="col-md-6">
                    <label for="monto" class="form-label">Monto</label>
                    <input type="number" step="0.01" name="Monto" id="monto" class="form-control" value="@Model.Monto"/>
                </div>

    
                <div class="col-md-6">
                    <label for="fechaPago" class="form-label">Fecha de pago</label>
                        <input type="date" name="FechaPago" id="fechaPago" class="form-control" value=@Model.FechaPago.ToString("yyyy-MM-dd") />
                </div>

                <div class="col-12">
                    <label for="nroRecibo" class="form-label">Número de recibo</label>
                    <input type="text" name="NroRecibo" id="nroRecibo" class="form-control" value="@Model.NroRecibo"/>
                </div>

                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle me-1"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
