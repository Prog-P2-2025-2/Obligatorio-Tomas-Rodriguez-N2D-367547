@using Dominio
@model PagoRecurrente
<h1 class="text-center my-4">CARGAR PAGO RECURRENTE</h1>



<div class="card-body">
@if (ViewBag.mensaje != null)
{
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.mensaje
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}


<form method="post" class="p-4 border rounded shadow-sm bg-light">

    <div class="mb-3">
        <label class="form-label">Fecha inicio</label>
        <input type="date" name="FechaInicio" class="form-control" value="" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha final</label>
        <input type="date" name="FechaFinal" class="form-control" value="" />
    </div>

    <div class="mb-3">
        <label for="monto" class="form-label">Monto</label>
        <input type="number" step="0.01" name="Monto" id="monto" class="form-control" value="@Model.Monto" />
    </div>

    <div class="mb-3">
        <label for="descripcion" class="form-label">Descripción</label>
        <input type="text" name="Descripcion" id="descripcion" class="form-control" value="@Model.Descripcion" />
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="metodoPago" class="form-label">Método de pago</label>
            <select name="MetodoDePago" id="metodoPago" class="form-select">
                <!--<option value="-1" selected>Seleccionar Método de pago</option>-->
                @foreach (int item in Enum.GetValues(typeof(MetodoDePago)))
                {
                    <option value="@item">@Enum.GetName(typeof(MetodoDePago), item)</option>
                }
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <label for="tipoGasto" class="form-label">Tipo de gasto</label>
            <select name="idTipoGasto" id="tipoGasto" class="form-select">
                <option value="">Seleccionar Tipo de gasto</option>
                @foreach (TipoGasto item in ViewBag.TiposGastos)
                {
                    if (Model.TipoGasto != null && item.Id == Model.TipoGasto.Id)
                    {
                        <option selected value="@item.Id">@item.Nombre</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }



                }
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary px-4 mt-2">
        <i class="bi bi-check-circle me-1"></i> Guardar
    </button>
</form>
