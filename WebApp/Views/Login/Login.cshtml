@if (ViewBag.mensaje != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form method="post" class="p-4 border rounded shadow-sm bg-light mx-auto" style="max-width: 350px;">

    <h4 class="text-center mb-4 fw-bold">Login</h4>

    <div class="mb-3">
        <label class="form-label fw-semibold">Email</label>
        <input type="email" name="Email" class="form-control" placeholder="Ingresá tu email" required />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Contraseña</label>
        <input type="password" name="Contrasenia" class="form-control" placeholder="Ingresá tu contraseña" required />
    </div>

    <button type="submit" class="btn btn-primary w-100">
        Iniciar sesión
    </button>

</form>
