@using Dominio;
@model Usuario

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Datos del Usuario</h5>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <label class="fw-bold">Nombre:</label>
                <span>@Model.Nombre</span>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Apellido:</label>
                <span>@Model.Apellido</span>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Email:</label>
                <span>@Model.Email</span>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Fecha de Incorporación:</label>
                <span>@Model.FechaIncorporacion.ToString("yyyy-MM-dd")</span>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Equipo:</label>
                <span>@Model.UnEquipo.Nombre</span>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Gasto Total De Este Mes Sin decuentos y recargos:</label>
                <span>@ViewBag.MontoTotal$</span>
            </div
                        <div class="mb-3">
                <label class="fw-bold">Gasto Total De Este Mes con decuentos y recargos:</label>
                <span>@ViewBag.MontoTotalAplicado$</span>
            </div>
        </div>

        @if (Context.Session.GetString("rol") == "gerente")
        {
            foreach(Usuario item in ViewBag.ListaUsuarioDelEquipo)
            {
                if (item is Gerente)
                {
                    <p>Getente @item.Nombre @item.Apellido @item.Email @item.FechaIncorporacion.ToString("yyyy-MM-dd")</p>
                }
                 if (item is Empleado)
                {
                    <p>Empleado @item.Nombre @item.Apellido @item.Email @item.FechaIncorporacion.ToString("yyyy-MM-dd")</p>
                }


            }
        }
    </div>
</div>
