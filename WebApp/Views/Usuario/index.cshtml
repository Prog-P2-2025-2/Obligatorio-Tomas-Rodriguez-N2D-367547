@Context.Session.GetString("rol")
﻿@using Dominio


<div class="card-body">
  @if (ViewBag.mensaje != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.mensaje
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

</div>
<div class="d-flex justify-content-center align-items-center" >
    <div class="text-center">
        <a href="~/Pago/VerPagoCargados?id=@Context.Session.GetInt32("id")" class="btn btn-primary m-2">Ver todos los pagos de este mes</a>
        <a href="~/Pago/PagoUnico?idUsuario=@Context.Session.GetInt32("id")" " class="btn btn-primary m-2">Cargar Pago unico</a>
        <a href="~/Pago/PagoRecurrente?idUsuario=@Context.Session.GetInt32("id")" class="btn btn-success m-2">Cargar pago recurrente</a>
        <a href="~/usuario/VerPerfil" class="btn btn-info m-2">Ver perfil</a>
    </div>
</div>