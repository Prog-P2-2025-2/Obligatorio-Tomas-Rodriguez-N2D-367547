@using Dominio

<style>
    /* Botones blancos personalizados */
    .btn-white {
        background-color: white;
        color: #0d6efd;                /* Azul Bootstrap */
        border: 2px solid #0d6efd;
        font-weight: 500;
        transition: 0.2s ease-in-out;
    }

    /* Hover: se vuelve azul con texto blanco */
    .btn-white:hover {
        background-color: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }

    /* Versión secundaria (gris oscuro) */
    .btn-secondary-white {
        background-color: white;
        color: #212529;
        border: 2px solid #212529;
        transition: 0.2s ease-in-out;
    }

    .btn-secondary-white:hover {
        background-color: #212529;
        color: white;
    }
</style>

<div class="container mt-4">

    <!-- Rol centrado como título -->
    <div class="text-center mb-4">
        <h4>
            <span class="badge bg-primary px-4 py-2 text-white">
                Rol: @Context.Session.GetString("rol")
            </span>
        </h4>
    </div>

    <!-- Mensaje -->
    @if (ViewBag.mensaje != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.mensaje
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow border-0">
                <div class="card-header text-center bg-primary text-white">
                    <h5 class="mb-0">Panel de Usuario</h5>
                </div>

                <div class="card-body text-center">

                    <div class="d-grid gap-3">

                        <a href="~/Pago/VerPagoCargadosEsteMes?idUsuario=@Context.Session.GetInt32("id")"
                           class="btn btn-white">
                            Ver todos los pagos de este mes
                        </a>

                        <a href="~/Pago/PagoUnico?idUsuario=@Context.Session.GetInt32("id")"
                           class="btn btn-white">
                            Cargar Pago Único
                        </a>

                        <a href="~/Pago/PagoRecurrente?idUsuario=@Context.Session.GetInt32("id")"
                           class="btn btn-white">
                            Cargar Pago Recurrente
                        </a>

                        <a href="~/usuario/VerPerfil?idUsuario=@Context.Session.GetInt32("id")"
                           class="btn btn-secondary-white">
                            Ver Perfil
                        </a>

                        @if (Context.Session.GetString("rol") == "gerente")
                        {
                            <hr />

                            <a href="~/Pago/VerPagosDeEquipo?idUsuario=@Context.Session.GetInt32("id")"
                               class="btn btn-secondary-white">
                                Ver Pagos del Equipo
                            </a>

                            <a href="~/TipoGasto/AltaTipoGasto"
                               class="btn btn-white">
                                Alta Tipo de Gasto
                            </a>

                            <a href="~/TipoGasto/ListaTipoGasto"
                               class="btn btn-secondary-white">
                              Listar e Eliminar Tipo de Gasto
                            </a>
                        }
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
